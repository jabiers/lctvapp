<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lctvapp.lctv" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.RootActivity.RootActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Common.BaseWebViewActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/app_name"/>

        <activity
            android:name=".Activities.LeftPanel.LeftPanelActivity"
            />

        <activity
            android:name=".Activities.RightPanel.RightPanelActivity"
            />
        <activity
            android:name=".Activities.Video.VideoActivity"
            />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
